{
  "oem_config": { "device": "LABEL=OEM", "config_path": "/kurma_oem.json" },
  "hostname": "kurmaos",
  "parent_cgroup_name": "kurma",
  "modules": [
    "nf_nat",
    "bridge",
    "br_netfilter",
    "nf_conntrack_ipv4",
    "xt_addrtype",
    "ipt_MASQUERADE",
    "xt_conntrack",
    "iptable_nat",
    "iptable_filter",
    "veth"
  ],
  "required_namespaces": ["ipc", "mount", "pid", "uts" ],
  "disks": [
    { "device": "LABEL=ROOT", "usage":  [ "pods", "volumes" ], "resize": true }
  ],
  "network_config": {
    "interfaces": [
      { "device": "lo", "address": "127.0.0.1/8" },
      { "device": "eth.+", "dhcp": true }
    ]
  },
  "services": {
    "ntp": { "enabled": true, "aci": "file:///ntp.aci",
             "servers": [ "0.pool.ntp.org", "1.pool.ntp.org", "2.pool.ntp.org", "3.pool.ntp.org" ] },
    "console": { "enabled": true, "aci": "file:///console.aci",
                 "password": "kurma" }
  },
  "init_containers": [
    "file:///kurma-api.aci"
  ]
}
